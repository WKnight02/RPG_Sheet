<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/background"
        android:layout_above="@+id/Title"
        android:layout_toStartOf="@+id/Title"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="49dp"
        android:id="@+id/imageView6"
        android:scaleX="45"
        android:scaleY="70"
        android:contentDescription="" />

    <Button
        android:text="@string/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Player"
        android:layout_marginBottom="68dp"
        android:layout_above="@+id/GameMaster"
        android:layout_alignStart="@+id/GameMaster"
        android:layout_alignEnd="@+id/GameMaster"
        android:translationY="20dp" />

    <Button
        android:text="@string/game_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="145dp"
        android:id="@+id/GameMaster"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/woddenTitle"
        android:id="@+id/imageView5"
        android:scaleX="5"
        android:scaleY="3"
        android:layout_alignTop="@+id/Title"
        android:layout_centerHorizontal="true"
        android:contentDescription="" />

    <TextView
        android:text="@string/rpg_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Title"
        android:textSize="30sp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_above="@+id/Player"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />

</RelativeLayout>
